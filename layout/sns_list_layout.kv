#-*- coding:utf-8 -*-
<SNSListItem>:
	height: '150sp'
	size_hint_y: None
	canvas:
        Color:
            rgb: .3, .3, .3
        Rectangle:
            pos: self.pos
            size: self.width, 1
	BoxLayout:
		orientation:'vertical'
		padding:'5dp'
	
		Button:
			text: root.sns_title
			text_size:self.width-10, self.height
			valign:'top'
			halign:'left'
			font_size:'12sp'
			font_name:"fonts/DroidSansFallback.ttf"
			bold: True
			size_hint_y: .2
			on_release: app.click_sns(root.sns_index)

	
		GridLayout:
			id:w_sns_gridlayout
			cols: 2
			row_force_default: True
			row_default_height: 110
			#padding:'2dp'
	
			Label:
				text: root.sns_content + '\n [ref=world]MORE[/ref]'
				text_size:self.width-10, self.height
				valign:'top'
				halign:'left'
				font_size:'11sp'
				font_name:"fonts/DroidSansFallback.ttf"
				markup:True
				on_ref_press:app.show_status(root.sns_index)
				mipmap:True
			#Image:
				#source: 'data/like.png'
				#size_hint_x:0.05
				#width: 10
				#height: self.width
				#mipmap:True

			
<SNS>:
	GridLayout:
		cols:1
		BoxLayout:

			orientation: 'horizontal'
			size_hint_y: None
			height: '48dp'
			padding: '1dp'

			canvas:
				Color:
					rgb: .3, .3, .3
				Rectangle:
					pos: self.pos
					size: self.size

			Image:
				source: 'data/icon.png'
				mipmap: True
				size_hint_x: None
				width: self.height

			Label:
				text: 'SNS Reader'
				font_size: '10sp'
				font_name:"fonts/DroidSansFallback.ttf"
				bold:True

			Spinner:
				id: _channel_spinner
				font_size: '10sp'
				text: 'All Platform'
				font_name:"fonts/DroidSansFallback.ttf"

			Button:
				text: 'More Status'
				font_size: '8sp'
				size_hint_x: None
				#width: self.height*2
				#on_release: root.more_status()
				on_release: app.more_status_sns()

			Button:
				text: 'Refresh'
				font_size: '8sp'
				size_hint_x: None
				#width: self.height*2
				#on_release: root.refresh_status()
				on_release: app.refresh_status_sns()
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: .9
			ListView:
				id:_list_status
				adapter: ListAdapter(data=root.snsdata, cls=Factory.SNSListItem, args_converter=root.sns_args_converter)
		
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'bottom'
			size_hint_y:.1
			
			BoxLayout:
				orientation: 'vertical'
				GeneralOptions:
					id: _general_options
					size_hint: 1,None
					height: 30

					
				StatusBar:
					id: _status_bar
					size_hint: 1,None
					height: 30

	
