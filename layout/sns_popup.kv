#-*- coding:utf-8 -*-
<SNSPopup>:
	size_hint: .5, .3
	title: 'Menu'
	BoxLayout:
		orientation: 'vertical'
		padding:'4dp'
		Button:
			text: 'Forward'
			on_press: app.go_forward_status(root.sns_index)
			on_press: root.dismiss()
		Button:
			text: 'Reply'
			on_press: app.go_reply_status(root.sns_index)
			on_press: root.dismiss()
		Button:
			text: 'Update'
			on_press: app.go_update_status()
			on_press: root.dismiss()

<MSSPopup@Popup>:
	size_hint: 1, 1
	title: 'Details'
	BoxLayout:
		orientation: 'vertical'
		padding:'1dp'
		Label:
			text: root.title_data
			font_name:"fonts/DroidSansFallback.ttf"
			text_size:self.size
			max_lines:2
			size_hint_y:.3

		TextInput:
			text: root.content_data
			font_name:"fonts/DroidSansFallback.ttf"
			disabled:True
			#size_hint_y: 4
			#size_hint_x: 1

		BoxLayout:
			orientation:'horizontal'
			Button:
				size_hint_y:.2
				text:'Like'
				on_press: root.dismiss()
			Button:
				size_hint_y:.2
				text:'Unlike'
				on_press: root.dismiss()
			


