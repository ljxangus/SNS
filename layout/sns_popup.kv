#-*- coding:utf-8 -*-
<SNSPopup>:
	size_hint: .5, .3
	title: 'Menu'
	BoxLayout:
		orientation: 'vertical'
		padding:'4dp'
		Button:
			text: 'Forward'
			on_press: app.go_forward_status(root.sns_index)
			on_press: root.dismiss()
		Button:
			text: 'Reply'
			on_press: app.go_reply_status(root.sns_index)
			on_press: root.dismiss()
		Button:
			text: 'Update'
			on_press: app.go_update_status()
			on_press: root.dismiss()

<MSSPopup@Popup>:
	size_hint: 1, 1
	title: 'Details'
	auto_dismiss: False
	BoxLayout:
		orientation: 'vertical'
		padding:'1dp'
		Label:
			text: root.title_data
			font_name:"fonts/DroidSansFallback.ttf"
			text_size:self.width,self.height
			valign:'top'
			halign:'left'
			max_lines:2
			size_hint_y:.3

		Label:
			text: root.content_data
			font_name:"fonts/DroidSansFallback.ttf"
			text_size:self.width,self.height
			valign:'top'
			halign:'left'
			#disabled:True

		BoxLayout:
			orientation:'horizontal'
			Button:
				size_hint_y:.2
				text:'Like'
				on_press: app.close_status(root.sns_indexinlist,root.startTime,True)
				on_press: root.dismiss()
			Button:
				size_hint_y:.2
				text:'Do not care'
				on_press: app.close_status(root.sns_indexinlist,root.startTime,None)
				on_press: root.dismiss()
			Button:
				size_hint_y:.2
				text:'Unlike'
				on_press: app.close_status(root.sns_indexinlist,root.startTime,False)
				on_press: root.dismiss()
			


