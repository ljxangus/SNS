#-*- coding:utf-8 -*-
<SNSPopup>:
	size_hint: .7, .5
	title: 'Menu'
	BoxLayout:
		orientation: 'vertical'
		padding:'4dp'
		Button:
			text: 'Forward'
			on_press: app.go_forward_status(root.sns_index)
			on_press: root.dismiss()
		Button:
			text: 'Reply'
			on_press: app.go_reply_status(root.sns_index)
			on_press: root.dismiss()
		Button:
			text: 'Update'
			on_press: app.go_update_status()
			on_press: root.dismiss()
		Button:
			text: 'Details'
			on_press: app.show_status(root.sns_index)
			on_press: root.dismiss()

<MSSPopup@Popup>:
	size_hint: 1, 1
	title: 'Status Details'
	auto_dismiss: False
	BoxLayout:
		orientation: 'vertical'
		padding:'1dp'
		Label:
			id: popup_label
			text: root.title_data
			font_name:"fonts/DroidSansFallback.ttf"
			text_size:self.width,self.height
			valign:'top'
			halign:'left'
			max_lines:2
			size_hint_y:.2

		Label:
			text: root.content_data
			font_name:"fonts/DroidSansFallback.ttf"
			#height: root.height - root.ids.popup_label.height
			text_size:self.size
			size_hint: 1,1
			valign:'top'
			halign:'left'
			font_size:'11dp'

		BoxLayout:
			orientation:'horizontal'
			Button:
				size_hint_y:.1
				text:'Like'
				on_press: app.close_status(root.sns_indexinlist,root.startTime,True)
				on_press: root.dismiss()
			Button:
				size_hint_y:.1
				text:'Do not care'
				on_press: app.close_status(root.sns_indexinlist,root.startTime,None)
				on_press: root.dismiss()
			Button:
				size_hint_y:.1
				text:'Unlike'
				on_press: app.close_status(root.sns_indexinlist,root.startTime,False)
				on_press: root.dismiss()

<AboutPopup>:
	size_hint: .8, .8
	title: 'About the author'
	auto_dismiss: True
	BoxLayout:
		orientation: 'vertical'
		padding:'1dp'
		Label:
			valign:'middle'
			halign:'center'
			text: 'The app is created by Jonathan, thanks for enjoying.'
			text_size: self.size
			size_hint_x:1
			
<HelpPopup>:
	size_hint: .8, .8
	title: 'HELP INFO'
	auto_dismiss: True
	BoxLayout:
		orientation: 'vertical'
		padding:'1dp'
		Label:
			valign:'middle'
			halign:'center'
			text: 'You can enquire at [color=ff0099][ref=world]https://github.com/ljxangus/SNS[/ref][/color]'
			text_size: self.size
			size_hint_x:1
			markup:True
			on_ref_press:app.open_url('https://github.com/ljxangus/SNS')


